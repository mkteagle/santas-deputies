<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Welcome to Santa's Deputies</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <style>
        body        { word-wrap:break-word; }
    </style>
</head>
<body onload="updateGiftee()">
<div id="nav">
    <div id="pull-right">
        <ul>
            <li>
                Welcome <%= user.google.name %>
            </li>
        </ul>
    </div>

</div>

<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> <%= user.google.name%>'s Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>

                <p>
                    <strong>id</strong>: <%= user.google.id %><br>
                    <strong>token</strong>: <%= user.google.token %><br>
                    <strong>email</strong>: <%= user.google.email %><br>
                    <strong>name</strong>: <text id="gName"><%= user.google.name %></text><br>
                    <strong>nickname</strong>: <%= user.google.nickname %>
                    <strong>giftee</strong>: <text class="path gifteeFinal" xml:space="preserve" text-anchor="middle" font-family="serif" font-size="20" id="svg_1" stroke-width="2" stroke="#000000" fill="#000000"></text>
                </p>

            </div>
        </div>
        <div class="col-sm-6">
            <div class="well">
                <p>
                    <a href="/results"><button>Secret Santa</button></a>
                </p>
            </div>
        </div>

    </div>

</div>
<script>
    function updateGiftee() {
        var gName = document.getElementById("gName").innerText;
        if (gName == "Michael Teagle") {
            document.getElementsByClassName("gifteeFinal").innerText = localStorage.getItem("mike");
        }
    }

</script>
</body>
</html>